@page
@model ProjectDefense.Web.Pages.Lecturer.Students.BanModel
@{
    ViewData["Title"] = "Ban Student";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h4>Select a student and the ban conditions.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.StudentId" class="form-label"></label>
                <select asp-for="Input.StudentId" asp-items="Model.Students" class="form-select">
                    <option value="">-- Select a student --</option>
                </select>
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" asp-for="Input.IsPermanent" class="form-check-input" />
                <label asp-for="Input.IsPermanent" class="form-check-label"></label>
            </div>

            <div class="mb-3" id="durationGroup">
                <label asp-for="Input.DurationDays" class="form-label"></label>
                <input asp-for="Input.DurationDays" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Input.Reason" class="form-label"></label>
                <textarea asp-for="Input.Reason" class="form-control" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-danger">Ban Student</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const isPermanentCheckbox = document.getElementById('Input_IsPermanent');
            const durationGroup = document.getElementById('durationGroup');
            const durationInput = document.getElementById('Input_DurationDays');

            function toggleDurationVisibility() {
                if (durationGroup && durationInput) {
                    const isChecked = isPermanentCheckbox.checked;
                    durationGroup.style.display = isChecked ? 'none' : 'block';
                    durationInput.disabled = isChecked;
                }
            }

            if (isPermanentCheckbox) {
                isPermanentCheckbox.addEventListener('change', toggleDurationVisibility);
                toggleDurationVisibility();
            }
        })();
    </script>
}